using System;

namespace PATrilhasAtiv06
{
	class Program
	{
		public static void Main(string[] args)
		{
				for   (int i = 0; i < 100; i++){
				
				if( i % 2 == 0){
				
					Console.WriteLine(i);
				
				}
			
			}
			
			Console.Write("Press any key to continue . . . ");
			Console.ReadKey(true);
		}
	}
}
